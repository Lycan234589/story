<%-include('Header.ejs')-%>
    <div class="cont">
        <h2 class="mb-3">Create a new Blog</h2>
        <form action="/compose" method="post">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Enter Blog Title" id="title" name="title">

            </div>
            <div class="form-group">
                <textarea class="form-control" rows="10" cols="20" placeholder="Enter blog content" id="content"
                    name="content"></textarea>
            </div>

            <button class="btn btn-block btn-primary btn-lg">Add Blog</button>

        </form>
    </div>
    <%-include('Footer.ejs')-%>